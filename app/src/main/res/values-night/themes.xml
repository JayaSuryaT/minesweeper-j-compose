<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MinesweeperJC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cobalt</item>
        <item name="colorOnPrimary">@color/beau</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/havelock</item>
        <item name="colorOnSecondary">@color/beau</item>

        <!-- Background color. -->
        <item name="backgroundColor">@color/vampire</item>
        <item name="background">@color/vampire</item>
        <item name="colorOnBackground">@color/beau</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/beau</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">?attr/backgroundColor</item>

    </style>

</resources>